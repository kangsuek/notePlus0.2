{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "outDir": "dist/renderer",
    "rootDir": "src/renderer",
    
    // React 환경
    "types": ["node"],
    
    // Bundler (Vite) 환경
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // Additional options for React
    "allowJs": true
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/main",
    "src/__tests__"
  ],
  "references": [
    { "path": "./tsconfig.main.json" }
  ]
}

